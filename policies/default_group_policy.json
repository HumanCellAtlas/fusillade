{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "fusGroupMember",
      "Effect": "Allow",
      "Action": [
        "fus:GetGroup"
      ],
       "Resource": [
         "arn:hca:fus:*:*:group/${fus:group_name}/policy",
         "arn:hca:fus:*:*:group/${fus:group_name}/groups"
       ]
    },
    {
      "Sid": "fusGroupAdmin",
      "Effect": "Allow",
      "Action": [
        "fus:PutUser",
        "fus:RemoveUser",
        "fus:PutGroup"
      ],
       "Resource": [
         "arn:hca:fus:*:*:group/${fus:group_name}/policy",
         "arn:hca:fus:*:*:group/${fus:group_name}/users"
       ],
      "Condition": {
        "StringEquals": {
          "fus:userEmail": ["owner"]
        }
      }
    }
  ]
}

